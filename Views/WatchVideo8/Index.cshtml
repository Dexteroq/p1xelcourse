﻿@{
    ViewData["Title"] = "Watch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>watch</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="css/style.css">
    <style>
        .radio-input {
            margin-bottom: 20px;
        }

            .radio-input.correct input[type="radio"]:checked + label {
                border: 2px solid green;
                color: green;
            }

            .radio-input.incorrect input[type="radio"]:checked + label {
                border: 2px solid red;
                color: red;
            }

        .result.success {
            color: green;
            display: none;
        }

        .result.error {
            color: red;
            display: none;
        }
    </style>
</head>
<body>



    <section class="watch-video">

        <div class="video-container">
            <div class="video">
                <video src="images/module3les1.mp4" controls poster="images/Frame 288.png" id="video"></video>
            </div>
            <h3 class="title">Complete PYTHON tutorial (part 08) <br> Test from below</h3>
            <div class="info">
                <p class="date"><i class="fas fa-calendar"></i><span>24.04.24</span></p>
            </div>
            <div class="tutor">
                <img src="images/thumb1.png" alt="">
                <div>
                    <h3>Module 3</h3>
                    <span>Python</span>
                </div>
            </div>
            <a href="Playlist2" class="inline-btn">Back</a>
            <p class="description">
                Python uses unique identification for assigning blocks of code (for example, smart constructs, loops, functions, etc.).
                For identification, please select 4 samples. Single tab stops are not recommended as they may cause problems with code readability.
            </p>
        </div>

    </section>

    <section class="comments">

        <h1 class="heading">3 test</h1>

        <form action="" class="add-comment">
            <div class="radio-input-container">
                <div class="radio-input">
                    <div class="info">
                        <span class="question">If Statements Question: What is the correct syntax for an if statement in Python to check if a variable x is greater than 10?<br></span>
                    </div>
                    <input type="radio" id="value-1" name="value-radio-1" value="value-1">
                    <label for="value-1">if (x > 10)</label>
                    <input type="radio" id="value-2" name="value-radio-1" value="value-2">
                    <label for="value-2">if x > 10:</label>
                    <input type="radio" id="value-3" name="value-radio-1" value="value-3">
                    <label for="value-3">if x > 10</label>
                    <span class="result success">Congratulations!</span>
                    <span class="result error">Bad answer</span>
                </div>

                <div class="radio-input">
                    <div class="info">
                        <span class="question">
                            Lists
                            Question: How do you append an item 'apple' to a list named fruits in Python?
                        </span>
                    </div>
                    <input type="radio" id="value-4" name="value-radio-2" value="value-4">
                    <label for="value-4">fruits.add('apple')</label>
                    <input type="radio" id="value-5" name="value-radio-2" value="value-5">
                    <label for="value-5">fruits.append('apple')</label>
                    <input type="radio" id="value-6" name="value-radio-2" value="value-6">
                    <label for="value-6">fruits.insert('apple')</label>
                    <span class="result success">Congratulations!</span>
                    <span class="result error">Bad answer</span>
                </div>

                <div class="radio-input">
                    <div class="info">
                        <span class="question">
                            For Loops and the range() Function
                            Question: How would you write a for loop in Python to iterate over the numbers from 0 to 4?
                        </span>
                    </div>
                    <input type="radio" id="value-7" name="value-radio-3" value="value-7">
                    <label for="value-7">
                        for i in range(5):
                        print(i)
                    </label>
                    <input type="radio" id="value-8" name="value-radio-3" value="value-8">
                    <label for="value-8">Both a and b</label>
                    <input type="radio" id="value-9" name="value-radio-3" value="value-9">
                    <label for="value-9">
                        for i in range(0, 5):
                        print(i)
                    </label>
                    <span class="result success">Congratulations!</span>
                    <span class="result error">Bad answer</span>
                </div>
            </div>
        </form>
    </section>

    <!-- custom js file link  -->
    <script src="js/script.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const correctAnswers = {
                'value-radio-1': 'value-2',
                'value-radio-2': 'value-5',
                'value-radio-3': 'value-8'
            };

            document.querySelectorAll('.radio-input').forEach((radioInput) => {
                radioInput.addEventListener('change', function (event) {
                    const name = event.target.name;
                    const value = event.target.value;
                    const success = radioInput.querySelector('.result.success');
                    const error = radioInput.querySelector('.result.error');

                    if (correctAnswers[name] === value) {
                        success.style.display = 'block';
                        error.style.display = 'none';
                        radioInput.classList.add('correct');
                        radioInput.classList.remove('incorrect');
                    } else {
                        success.style.display = 'none';
                        error.style.display = 'block';
                        radioInput.classList.add('incorrect');
                        radioInput.classList.remove('correct');
                    }
                });
            });
        });
    </script>

</body>
</html>
