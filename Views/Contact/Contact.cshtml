@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact">
    <div class="row">
        <div class="image">
            <img src="~/images/contact-img.svg" alt="">
        </div>
        <form asp-controller="Contact" asp-action="SendMessage" method="post">
            <h3>Get in touch</h3>
            <input type="text" placeholder="enter your name" name="name" required maxlength="50" class="box">
            <input type="email" placeholder="enter your email" name="email" required maxlength="50" class="box">
            <input type="number" placeholder="enter your number" name="number" required maxlength="50" class="box">
            <textarea name="msg" class="box" placeholder="enter your message" required maxlength="1000" cols="30" rows="10"></textarea>
            <input type="submit" value="send message" class="inline-btn" name="submit">
        </form>
    </div>

    <div class="box-container">
        <div class="box">
            <i class="fas fa-phone"></i>
            <h3>Phone number</h3>
            <a href="tel:095-000-00-00">095-000-00-00</a>
            <a href="tel:095-000-00-00">095-000-00-00</a>
        </div>

        <div class="box">
            <i class="fas fa-envelope"></i>
            <h3>Email address</h3>
            <a href="mailto:harrisonnn2023@gmail.com">harrisonnn2023@gmail.com</a>
            <a href="mailto:harrisonnn2023@gmail.com">harrisonnn2023@gmail.com</a>
        </div>

        <div class="box">
            <i class="fas fa-map-marker-alt"></i>
            <h3>Office address</h3>
            <a href="#">Shevchenko Avenue, 1, Odessa, Odeska region, 65044</a>
        </div>
    </div>
</section>
