<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>profile</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="css/style.css">

</head>
<body>

    <header class="header">

        <section class="flex">

            <a href="Home" class="logo">School</a>



            <div class="icons">
                <div id="menu-btn" class="fas fa-bars"></div>
                <div id="search-btn" class="fas fa-search"></div>
                <div id="user-btn" class="fas fa-user"></div>
            </div>

            <div class="profile">
                <img src="images/pic-1.png" class="image" alt="">
                <h3 class="name">Maksim Petrovich</h3>
                <p class="role">Student</p>
                <a href="Profile" class="btn">view profile</a>
                <div class="flex-btn">
                    <a href="Login" class="option-btn">exit</a>
                </div>
            </div>

        </section>

    </header>

    <div class="side-bar">

        <div id="close-btn">
            <i class="fas fa-times"></i>
        </div>

        <div class="profile">
            <img src="images/pic-1.png" class="image" alt="">
            <h3 class="name">Maksim Petrovich</h3>
            <p class="role">Student</p>
            <a href="Profile" class="btn">view profile</a>
        </div>

        <nav class="navbar">
            <a href="Home"><i class="fas fa-home"></i><span>Home</span></a>
            <a href="About"><i class="fas fa-question"></i><span>About</span></a>
            <a href="Courses"><i class="fas fa-graduation-cap"></i><span>Homework</span></a>
            <a href="Contact"><i class="fas fa-headset"></i><span>Contact us</span></a>
        </nav>

    </div>

    <section class="user-profile">

        <h1 class="heading">your profile</h1>

        <div class="info">

            <div class="user">
                <img src="images/pic-1.png" alt="">
                <h3>Maksim Petrovich</h3>
                <p>Student</p>
            </div>

            <div class="box-container">

                <div class="box">
                    <div class="flex">
                        <i class="fas fa-bookmark"></i>
                        <div>
                            <span>4</span>
                            <p>Done homeworks</p>
                        </div>
                    </div>
                    <a href="#" class="inline-btn">view</a>
                </div>

                <div class="box">
                    <div class="flex">
                        <i class="fas fa-heart"></i>
                        <div>
                            <span>33</span>
                            <p>Praise from the teacher</p>
                        </div>
                    </div>
                    <a href="#" class="inline-btn">view</a>
                </div>

                <div class="box">
                    <div class="flex">
                        <i class="fas fa-comment"></i>
                        <div>
                            <span>12</span>
                            <p>homeworks comments</p>
                        </div>
                    </div>
                    <a href="#" class="inline-btn">view</a>
                </div>

            </div>
        </div>

    </section>















    <!-- custom js file link  -->
    <script src="js/script.js"></script>


</body>
</html>