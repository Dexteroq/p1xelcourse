                <div id="search-btn" class="fas fa-search"></div>
                <div id="user-btn" class="fas fa-user"></div>
            </div>
            <div class="profile">
                <img src="images/pic-1.png" class="image" alt="">
                <h3 class="name">Maksim Petrovich</h3>
