<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - School</title>

    <!-- font awesome cdn link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

    <!-- custom css file link -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
</head>
<body>

    <header class="header">
        <section class="flex">
            <a href="~/Home" class="logo">School</a>

            <div class="icons">
                <div id="menu-btn" class="fas fa-bars"></div>
                <div id="search-btn" class="fas fa-search"></div>
                <div id="user-btn" class="fas fa-user"></div>
            </div>

            <div class="profile">
                <img src="~/images/pic-1.png" class="image" alt="">
                <h3 class="name">Maksim Petrovich</h3>
                <p class="role">Student</p>
                <a href="~/Profile" class="btn">view profile</a>
                <div class="flex-btn">
                    <a href="~/Login" class="option-btn">exit</a>
                </div>
            </div>
        </section>
    </header>

    <div class="side-bar">
        <div id="close-btn">
            <i class="fas fa-times"></i>
        </div>

        <div class="profile">
            <img src="~/images/pic-1.png" class="image" alt="">
            <h3 class="name">Maksim Petrovich</h3>
            <p class="role">Student</p>
            <a href="~/Profile" class="btn">view profile</a>
        </div>

        <nav class="navbar">
            <a href="~/Home"><i class="fas fa-home"></i><span>Home</span></a>
            <a href="~/About"><i class="fas fa-question"></i><span>About</span></a>
            <a href="~/Courses"><i class="fas fa-graduation-cap"></i><span>Homework</span></a>
            <a href="~/Contact"><i class="fas fa-headset"></i><span>Contact us</span></a>
        </nav>
    </div>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- custom js file link -->
    <script src="~/js/script.js" asp-append-version="true"></script>
</body>
</html>
